{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>IsVerified</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.name }}</td>
                <td>
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a id="create" href="{{ path('app_user_crud_new') }}">Create new</a>

    <div class="foot">
        <span id="separator">--------------------</span><br>
        <a href="{{ path('admin') }}">Retour Menu Admin</a> ----- <a href="{{ path('app_home') }}">Retour a l'accueil</a>
    </div>
{% endblock %}
