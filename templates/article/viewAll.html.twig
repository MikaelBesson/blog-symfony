{% extends 'base.html.twig' %}

{% block title %}Tout les articles{% endblock %}


{% block body %}
    <h1>Tout nos articles</h1>
    <div id="allArticles">
        {% for article in articles %}
            <div class="articles">
                <h2>-- {{ article.title }} --</h2>
                <div>
                    <p>
                        <a href="{{ path('article_view', {id: article.id}) }}">voir le contenue</a>
                    </p>
                    <span>post√©e le:{{ article.dateAdd | date("d/m/y") }}</span>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="foot">
        <span id="separator">--------------------</span><br>
        <a href="{{ path('app_home') }}">Retour a l'accueil</a>
    </div>
{% endblock %}